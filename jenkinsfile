pipeline {
    agent any

    parameters {
        choice(name: 'ENV', choices: ['dev', 'qa', 'prod'], description: 'Choose environment')
        string(name: 'USERNAME', defaultValue: 'Likitha', description: 'Enter your name')
    }

    environment {
        COMPANY = "TechCorp"
        VERSION = "2.0.1"
    }

    stages {

        stage('Show Inputs') {
            steps {
                echo "Hello ${params.USERNAME}!"
                echo "Environment Selected: ${params.ENV}"
                echo "Company: ${env.COMPANY}"
                echo "Version: ${env.VERSION}"
            }
        }

        stage('Decision Making') {
            steps {
                script {
                    if (params.ENV == "prod") {
                        echo "⚠️ Production Deployment starteddddd!"
                    } else {
                        echo "Deploying to ${params.ENV} environment..."
                    }
                }
            }
        }
    }
}

